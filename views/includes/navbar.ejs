.center-heading {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 10px;
    border-right: 5px solid red;
    width: 18%;
    white-space: nowrap;
    overflow: hidden;
    animation:
      typing 5s steps(15) infinite,
      cursor .4s step-end infinite alternate;

}
/*cursor blinking*/
@keyframes cursor{
  50% { border-color: transparent}
}
/*typing effect*/
@keyframes typing {
    0%, 100% { width: 0; }
    50% { width: 18%; }
  }



